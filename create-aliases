#!/bin/bash

[ -n "${BASH_SOURCE[0]}" ] && SCRIPT_PATH="${BASH_SOURCE[0]}" || SCRIPT_PATH="$0"
APP_FOLDER_PATH=`dirname $SCRIPT_PATH`

pushd "$LETDEV_APP_FOLDER_PATH" > /dev/null

export LETDEV_PROFILE='bia'
export LETDEV_APP_FOLDER_PATH=`echo "$HOME/letdev"`
export LETDEV_ALIASES_FOLDER_PATH=`echo "$HOME/aliases"`
export LETDEV_SYMBOL=':'

# System aliases
CMD=`./echo-add-folder-script './aliases'` && eval "$CMD"

# User aliases
[ -d "$LETDEV_ALIASES_FOLDER_PATH" ] && CMD=`./echo-add-folder-script "$LETDEV_ALIASES_FOLDER_PATH"` && eval "$CMD"

# Default command alias
alias :="source $LETDEV_APP_FOLDER_PATH/default"


export PATH="./.letdev/$LETDEV_PROFILE:$PATH"

popd > /dev/null
