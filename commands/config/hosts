#!/usr/bin/env bash
# set -euo pipefail

COMMAND_DESCRIPTION="Edit hosts file"
COMMAND_HELP="Open hosts in the preferred text editor"

COMMAND_DESCRIPTION="Edit pry configuration"
COMMAND_HELP="Open '~/.bashrc' in the preferred text editor"

_do_command() {
    if [[ "$1" = "--help" ]]; then
        echo "$COMMAND_HELP"
        return
    fi
        
    local FILE_TO_OPEN="/etc/hosts"

    local SCRIPT_PATH=''
    [ -n "${BASH_SOURCE[0]}" ] && SCRIPT_PATH="${BASH_SOURCE[0]}" || SCRIPT_PATH="$0"
    # Get the absolute path of the current script and expand the '..' to the real path
    SCRIPT_PATH=`readlink -f $SCRIPT_PATH`
    # Get the directory of the script
    local SCRIPT_DIR=`dirname $SCRIPT_PATH`

    source "$SCRIPT_DIR/.edit_config.sh"
    _edit_config "$FILE_TO_OPEN" $@
}

_do_command "$@"
